package sintaxeVariaveisFluxo;

public class testaVariaveis {

	public static void main(String[] args) {
		
		System.out.println("Olá novo teste");
		
		int idade;
		
		idade = 20;
		
		System.out.println("A idade é " + idade);
		
		idade = ++idade;
		
		System.out.println("A idade é " + dade);
		
		idade = idade + 10;
		
		System.out.println("A idade é " + idade);
		
		idade = idade * 20;
		
		System.out.println("A idade é " + idade);
		
		idade = idade - 20;
		
		System.out.println("A idade é " + idade);
		
		idade = idade / 20;
		
		System.out.println("A idade é " + idade);
		
	}
	
}
