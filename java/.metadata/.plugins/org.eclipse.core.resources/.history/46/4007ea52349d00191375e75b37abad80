package sintaxeVariaveisFluxo;

public class testaVariaveis {

	public static void main(String[] args) {
		System.out.println("OlÃ¡ novo teste");
		
		int idade;
		
		idade = 20;
		
		System.out.println(idade);
		
		idade = idade++;
		
		System.out.println(idade);
		
		idade = idade + 10;
		
		System.out.println(idade);
		
		idade = idade * 20;
		
		System.out.println(idade);
		
		idade = idade - 20;
		
		System.out.println(idade);
		
		idade = idade / 20;
		
		System.out.println(idade);
		
	}
	
}
